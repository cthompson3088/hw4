<h1 class="mb-4"><%= @place["name"] %></h1>

<% if @current_user %>
  <h2 class="mb-4">My Entries</h2>
  <div class="container">
    <div class="row">
      <% @entries.each do |entry| %>
        <div class="col-12 col-md-4 mb-4">
          <div class="card h-100 p-3">
            <div class="card-body">
              <h5 class="card-title"><%= entry["title"] %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
              <% if entry["image"] %>
                <img src="<%= entry["image"] %>" class="img-fluid mb-3" alt="Image for <%= entry["title"] %>">
              <% else %>
                <div style="height: 180px;" class="mb-3"></div>
              <% end %>
              <p class="card-text"><%= entry["description"] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary mb-3">New Post</a>
  </p>

  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
<% end %>


